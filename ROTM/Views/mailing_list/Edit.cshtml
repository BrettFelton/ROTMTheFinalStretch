@model ROTM.mailing_list

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Mailing List</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Mailing_List_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Mailing_List_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Please enter the new mailing list">
                    @Html.EditorFor(model => model.Mailing_List_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mailing_List_Name, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mailing_List_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Please enter the description of the above mentioned mailing list">
                    @Html.EditorFor(model => model.Mailing_List_Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mailing_List_Description, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" data-toggle="tooltip" title="Update the mailing list">
                    <input type="submit" value="Save" class="btn btn-default" />
                </a>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
