@model ROTM.access_level

@{
    ViewBag.Title = "Create";
}

<h2>Create a new</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Access Level</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Access_Level_Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Enter the new access level">
                    @Html.EditorFor(model => model.Access_Level_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Access_Level_Name, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Access_Level_Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Please enter a description for the above mentioned access level">
                    @Html.EditorFor(model => model.Access_Level_Description, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Access_Level_Description, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" data-toggle="tooltip" title="Create the new access level">
                    <input type="submit" value="Create" class="btn btn-default" />
                </a>
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Back to Access Level List", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
