@model ROTM.Models.ProjectedBookingsViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Generate Porjected Bookings Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Employee_ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Please select the employee you want to generate the report for">
                    @Html.DropDownList("Employee_ID", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Employee_ID, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" data-toggle="tooltip" title="Generate and download the Projected Bookings report">
                    <input type="submit" value="Download Report" class="btn btn-default" />
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}