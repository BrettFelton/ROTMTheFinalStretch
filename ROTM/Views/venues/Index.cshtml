@model IEnumerable<ROTM.venue>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input type="text" name="SearchString" placeholder="E.g. Conference Room" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-default" /> |
            @Html.ActionLink("Show Full List", "Index", "Venues")
        </p>
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Venue_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Venue_Size)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address.Street_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address.Suburb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address.Province)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address.Country)
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Venue_Size)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address.Street_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address.Suburb)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address.Province)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address.Country)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Venue_ID }) |
            @Html.ActionLink("Details", "Details", new { id = item.Venue_ID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Venue_ID })
        </td>
    </tr>
}

</table>
