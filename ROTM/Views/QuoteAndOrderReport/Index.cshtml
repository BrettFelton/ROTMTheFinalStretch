@model ROTM.Models.QuoteAndOrderReportViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Generate Quote and Order Report</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.fromDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <a href="#" data-toggle="tooltip" title="Please enter the date fro the report that you want to generate">
                    @Html.EditorFor(model => model.fromDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fromDate, "", new { @class = "text-danger" })
                </a>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a href="#" data-toggle="tooltip" title="Generate and download the Quote and Order Report">
                    <input type="submit" value="Download Report" class="btn btn-default" />
                </a>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
