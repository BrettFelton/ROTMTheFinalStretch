            </td>
            <td>
                @Html.DisplayFor(modelItem => item.training_course.Training_Course_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.venue.Venue_Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Training_Course_Instance_ID }) |
