}

<h2>Training Courses</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            Search: <input type="text" name="SearchString" placeholder="E.g. Harry" value="@ViewData["currentFilter"]" />
        </p>
    </div>
    <div>
        <p class="text-warning">
            The date will be defaulted to todays date.
        </p>
        <p>
            From Date: <input type="text" name="fromDate" value="@ViewData["fromDate"]" /> @*@Html.TextBox("fromDate", string.Format("{0:dd MMM yyy}", fromDate), new { @class = "datefield", type = "date" })*@
            To Date: <input type="text" name="toDate" value="@ViewData["toDate"]" /> @*@Html.TextBox("toDate", string.Format("{0:dd MMM yyy}", fromDate), new { @class = "datefield", type = "date" })*@
                     <a href="#" data-toggle="tooltip" title="Search the trainging courses"><input type="submit" value="Search" class="btn btn-default" /></a> |
            @Html.ActionLink("Show Todays Training Courses", "Index", "training_course_instance")
        </p>
    </div>
</form>

